// 날짜(일)별 통계
select count(*) as count, to_char(create_time, 'YYYY-MM-DD') as time_cbk
from senior.user
where create_time >= '2015-06-01' AND create_time < '2015-07-01'
group by to_char(create_time, 'YYYY-MM-DD');

